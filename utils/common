#==============================================================================
# Common variables etc

DB_PASSWORD_IDENTITY=`utils/openstack-config-get /etc/openstack/openstack.conf secrets identity_db_password`
DB_PASSWORD_COMPUTE=`utils/openstack-config-get /etc/openstack/openstack.conf secrets compute_db_password`
DB_PASSWORD_IMAGESTORE=`utils/openstack-config-get /etc/openstack/openstack.conf secrets imagestore_db_password`

IDENTITY_SERVICE_TOKEN=`utils/openstack-config-get /etc/openstack/openstack.conf secrets identity_service_token`
IDENTITY_SERVICE_ENDPOINT=`utils/openstack-config-get /etc/openstack/openstack.conf identity endpoint --default http://127.0.0.1:35357/v2.0/`

SERVICE_TENANT_NAME=`utils/openstack-config-get /etc/openstack/openstack.conf secrets service_tenant_name --default services`

NOVA_SERVICE_USERNAME=`utils/openstack-config-get /etc/openstack/openstack.conf secrets compute_service_username --default nova`
NOVA_SERVICE_PASSWORD=`utils/openstack-config-get /etc/openstack/openstack.conf secrets compute_service_password`

GLANCE_SERVICE_USERNAME=`utils/openstack-config-get /etc/openstack/openstack.conf secrets imagestore_service_username --default glance`
GLANCE_SERVICE_PASSWORD=`utils/openstack-config-get /etc/openstack/openstack.conf secrets imagestore_service_password`

RABBIT_PASSWORD=`utils/openstack-config-get /etc/openstack/openstack.conf secrets rabbitmq_password`

HEAD_IP=`utils/openstack-config-get /etc/openstack/openstack.conf network head_node`
CLOUD_RANGE=`utils/openstack-config-get /etc/openstack/openstack.conf network cloud_range`
NETWORK_RANGE=`utils/openstack-config-get /etc/openstack/openstack.conf network network_range`
NETWORK_GATEWAY=`utils/openstack-config-get /etc/openstack/openstack.conf network gateway`

MY_IP=`utils/openstack-config-get /etc/openstack/machine.conf network my_ip`
BRIDGE_INTERFACE=`utils/openstack-config-get /etc/openstack/machine.conf network bridge_interface`
NETWORK_INTERFACE=`utils/openstack-config-get /etc/openstack/machine.conf network network_interface`

NETWORK_RANGE_NETMASK=`utils/openstack-netutils ${NETWORK_RANGE} netmask`


